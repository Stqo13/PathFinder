@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
<div id="register-main-container">
    <h1 id="register-h1-text">@ViewData["Title"]</h1>
    <form method="post" asp-area="Identity" asp-page="/Account/Register" id="register-container">
        <div id="register-full-input-container">
            <div class="flex-column">
                <label>Име</label>
            </div>
            <div class="inputForm" id="register-input-containers">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="firstName" aria-required="true" placeholder="Име" />
            </div>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>

            <div class="flex-column">
                <label>Фамилия</label>
            </div>
            <div class="inputForm" id="register-input-containers">
                <input asp-for="Input.LastName" class="form-control" autocomplete="lastName" aria-required="true" placeholder="Фамилия" />
            </div>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>

            <div class="flex-column">
                <label>Дата на раждане</label>
            </div>
            <div class="inputForm" id="register-input-containers">
                <input asp-for="Input.DateOfBirth" class="form-control" autocomplete="bday" aria-required="true" placeholder="гггг-ММ-дд" />
            </div>
            <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>

            <div class="flex-column">
                <label>Имейл </label>
            </div>
            <div class="inputForm" id="register-input-containers">
                <div id="register-svg-container">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" viewBox="0 0 32 32" height="20"><g data-name="Layer 3" id="Layer_3"><path d="m30.853 13.87a15 15 0 0 0 -29.729 4.082 15.1 15.1 0 0 0 12.876 12.918 15.6 15.6 0 0 0 2.016.13 14.85 14.85 0 0 0 7.715-2.145 1 1 0 1 0 -1.031-1.711 13.007 13.007 0 1 1 5.458-6.529 2.149 2.149 0 0 1 -4.158-.759v-10.856a1 1 0 0 0 -2 0v1.726a8 8 0 1 0 .2 10.325 4.135 4.135 0 0 0 7.83.274 15.2 15.2 0 0 0 .823-7.455zm-14.853 8.13a6 6 0 1 1 6-6 6.006 6.006 0 0 1 -6 6z"></path></g></svg>
                </div>

                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Въведи имейл" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
    
            <div class="flex-column">
                <label>Парола </label>
            </div>
            <div class="inputForm" id="register-input-containers">
                <div id="register-svg-container">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" viewBox="-64 0 512 512" height="20"><path d="m336 512h-288c-26.453125 0-48-21.523438-48-48v-224c0-26.476562 21.546875-48 48-48h288c26.453125 0 48 21.523438 48 48v224c0 26.476562-21.546875 48-48 48zm-288-288c-8.8125 0-16 7.167969-16 16v224c0 8.832031 7.1875 16 16 16h288c8.8125 0 16-7.167969 16-16v-224c0-8.832031-7.1875-16-16-16zm0 0"></path><path d="m304 224c-8.832031 0-16-7.167969-16-16v-80c0-52.929688-43.070312-96-96-96s-96 43.070312-96 96v80c0 8.832031-7.167969 16-16 16s-16-7.167969-16-16v-80c0-70.59375 57.40625-128 128-128s128 57.40625 128 128v80c0 8.832031-7.167969 16-16 16zm0 0"></path></svg>
                </div>

                <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" placeholder="Въведи парола" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <div class="flex-column">
                <label>Потвърдете паролата</label>
            </div>
            <div class="inputForm" id="register-input-containers">
                <div id="register-svg-container">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" viewBox="-64 0 512 512" height="20"><path d="m336 512h-288c-26.453125 0-48-21.523438-48-48v-224c0-26.476562 21.546875-48 48-48h288c26.453125 0 48 21.523438 48 48v224c0 26.476562-21.546875 48-48 48zm-288-288c-8.8125 0-16 7.167969-16 16v224c0 8.832031 7.1875 16 16 16h288c8.8125 0 16-7.167969 16-16v-224c0-8.832031-7.1875-16-16-16zm0 0"></path><path d="m304 224c-8.832031 0-16-7.167969-16-16v-80c0-52.929688-43.070312-96-96-96s-96 43.070312-96 96v80c0 8.832031-7.167969 16-16 16s-16-7.167969-16-16v-80c0-70.59375 57.40625-128 128-128s128 57.40625 128 128v80c0 8.832031-7.167969 16-16 16zm0 0"></path></svg>
                </div>

                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Потвърдете си паролата" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div id="register-extra-options-container">
            <div id="register-extra-options-external">
                <button class="signin">
                    <svg viewBox="0 0 256 262"
                         preserveAspectRatio="xMidYMid"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M255.878 133.451c0-10.734-.871-18.567-2.756-26.69H130.55v48.448h71.947c-1.45 12.04-9.283 30.172-26.69 42.356l-.244 1.622 38.755 30.023 2.685.268c24.659-22.774 38.875-56.282 38.875-96.027"
                              fill="#4285F4"></path>
                        <path d="M130.55 261.1c35.248 0 64.839-11.605 86.453-31.622l-41.196-31.913c-11.024 7.688-25.82 13.055-45.257 13.055-34.523 0-63.824-22.773-74.269-54.25l-1.531.13-40.298 31.187-.527 1.465C35.393 231.798 79.49 261.1 130.55 261.1"
                              fill="#34A853"></path>
                        <path d="M56.281 156.37c-2.756-8.123-4.351-16.827-4.351-25.82 0-8.994 1.595-17.697 4.206-25.82l-.073-1.73L15.26 71.312l-1.335.635C5.077 89.644 0 109.517 0 130.55s5.077 40.905 13.925 58.602l42.356-32.782"
                              fill="#FBBC05"></path>
                        <path d="M130.55 50.479c24.514 0 41.05 10.589 50.479 19.438l36.844-35.974C195.245 12.91 165.798 0 130.55 0 79.49 0 35.393 29.301 13.925 71.947l42.211 32.783c10.59-31.477 39.891-54.251 74.414-54.251"
                              fill="#EB4335"></path>
                    </svg>
                    Влез с Google
                </button>
                <button class="signin">
                    <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="100" height="100" viewBox="0,0,256,256">
                        <g fill="#5b81d9" fill-rule="nonzero" stroke="none" stroke-width="1" stroke-linecap="butt" stroke-linejoin="miter" stroke-miterlimit="10" stroke-dasharray="" stroke-dashoffset="0" font-family="none" font-weight="none" font-size="none" text-anchor="none" style="mix-blend-mode: normal"><g transform="scale(5.12,5.12)"><path d="M41,4h-32c-2.76,0 -5,2.24 -5,5v32c0,2.76 2.24,5 5,5h32c2.76,0 5,-2.24 5,-5v-32c0,-2.76 -2.24,-5 -5,-5zM37,19h-2c-2.14,0 -3,0.5 -3,2v3h5l-1,5h-4v15h-5v-15h-4v-5h4v-3c0,-4 2,-7 6,-7c2.9,0 4,1 4,1z"></path></g></g>
                    </svg>
                    Влез с Facebook
                </button>
            </div>

            <div id="register-extra-options-text">
                <p class="p" id="register-already-have-account">
                    Вече имаш акаунт?
                    <a id="register-as-a-new-user" asp-page="./Login">Влез</a>
                </p>
            </div>

            <hr class="register-horizontal-devider">
            <button type="submit" id="register-sign-in-button">
                Регистрация
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
