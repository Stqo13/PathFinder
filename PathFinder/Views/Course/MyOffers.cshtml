@using PathFinder.ViewModels.CourseViewModels;
@model IEnumerable<CourseInfoViewModel>

@{
    ViewData["Title"] = "My Course Offers";
}

<h2 class="text-center mb-4">My Course Offers</h2>

@if (Model.Any())
{
    <div class="container">
        <div class="list-group">
            @foreach (var course in Model)
            {
                <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center mb-2 p-3 shadow-sm">
                    <div>
                        <h5 class="mb-1">@course.Name</h5>
                        <p class="mb-0 text-muted">
                            <strong>Mode:</strong> @course.Mode |
                            <strong>Start:</strong> @course.StartDate |
                            <strong>End:</strong> @course.EndDate |
                            <strong>Duration:</strong> @course.CourseDurationInWeeks weeks |
                            <strong>Price:</strong> $@course.MonthlyPrice/month
                        </p>
                    </div>
                    <span class="badge bg-primary rounded-pill px-3 py-2">View Details</span>
                </a>
            }
        </div>
    </div>
}
else
{
    <p class="text-center text-muted">You haven't posted any course offers yet.</p>
}

