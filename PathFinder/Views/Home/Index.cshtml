@inject IViewLocalizer Localizer;

@{
    ViewData["Title"] = "Home Page";
}


<div id="home-page-container">
    <div id="home-page" class="text-center container">
        <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>

            <div class="carousel-inner">
                <div class="carousel-item active item1">
                    <div class="home-page-carousel-container">
                        <h1 id="home-first-carousel-h1">
                            @Localizer["WelcomeMessage"] 
                        </h1>

                        <p id="carousel-subtitle" >
                            @Localizer["FirstPageCarouselSlogan"]
                        </p>

                        <p>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-area="Identity" asp-page="/Account/Register" class="home-page-carousel-btn" id="sign-up-today-btn">
                                    @Localizer["WelcomeSignUpMessage"]
                                </a>
                            }
                        </p>
                    </div>
                    
                </div>

                <div class="carousel-item item2">
                    <div class="container">
                        <div class="carousel-caption" id="second-page-carousel">
                            <h1 id="home-second-carousel-h1">
                                @Localizer["WelcomeCarouselSecondPageTitle"]
                            </h1>

                            <p id="carousel-subtitle">
                                @Localizer["WelcomeCarouselSecondPageSlogan"]
                            </p>

                            <p>
                                <a asp-area="" asp-controller="Course" asp-action="Index" class="home-page-carousel-btn" id="explore-courses-btn">
                                    @Localizer["WelcomeCarouselSecondPageButton"]
                                </a>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="carousel-item item3">
                    <div class="container">
                        <div class="carousel-caption text-end" id="third-page-carousel">
                            <h1 id="home-second-carousel-h1">
                                @Localizer["WelcomeCarouselThirdPageTitle"]
                            </h1>

                            <p id="carousel-subtitle">
                                @Localizer["WelcomeCarouselThirdPageSlogan"]
                            </p>

                            <p>
                                <a asp-area="" asp-controller="Job" asp-action="Index" class="home-page-carousel-btn" id="browse-job-offers-btn">
                                    @Localizer["WelcomeCarouselThirdPageButton"]                                   
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>

                <span class="visually-hidden">
                    Previous
                </span>
            </button>

            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>

                <span class="visually-hidden">
                    Next
                </span>
            </button>
        </div>

        <hr class="featurette-divider">

        <div class="container marketing">
            <div id="home-page-description-container">
                <div class="home-page-sumary">
                    <h2 id="home-page-h2-text-description">
                        @Localizer["WelcomeHeading"]
                    </h2>

                    <p id="home-down-text">
                        @Localizer["WelcomeText"]
                    </p>
                </div>

                <div class="col-md-5">
                    <svg class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" id="home-first-image" width="500" height="450" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 500x500" preserveAspectRatio="xMidYMid slice" focusable="false">
                    </svg>
                </div>
            </div>

            <hr class="featurette-divider">

            <div id="home-page-description-container">
                <div class="home-page-sumary order-md-2">
                    <h2 id="home-page-h2-text-description">
                        @Localizer["WelcomeMoreHeading"]
                    </h2>

                    <p id="home-down-text">
                        @Localizer["WelcomeMoreText"]
                    </p>
                </div>

                <div class="col-md-5 order-md-1">
                    <svg class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" id="home-second-image" width="500" height="500" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 500x500" preserveAspectRatio="xMidYMid slice" focusable="false">
                    </svg>
                </div>
            </div>

            <hr class="featurette-divider">

            <h2 id="home-page-h2-text-description" style="color: white;">
                @Localizer["AboutUs"]
            </h2>

            <div id="home-page-description-container">
                <div class="home-page-sumary" id="home-first-person">
                    <img src="../images/profile-avatar-boy.jpg" id="home-first-person-pic" class="rounded-circle" width="140" height="140" alt="Person Picture">

                    <h2 class="home-names-h2">
                        @Localizer["AboutUsStefan"]
                    </h2>

                    <p>
                        <form method="post" asp-action="AboutUsStefan" asp-controller="Home">
                        <button type="submit" class="btn btn-secondary social-links-btn">
                            @Localizer["SocialLinks"]
                        </button>
                        </form>
                    </p>
                </div>

                <div class="home-page-sumary" id="home-second-person">
                    <img src="../images/profile-avatar-girl.jpg" id="home-second-person-pic" class="rounded-circle" width="140" height="140" alt="Person Picture">

                    <h2 class="home-names-h2">
                        @Localizer["AboutUsTedi"]
                    </h2>

                    <p>
                        <form method="post" asp-action="AboutUsTedi" asp-controller="Home">
                            <button type="submit" class="btn btn-secondary social-links-btn">
                                @Localizer["SocialLinks"]
                            </button>
                        </form>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>