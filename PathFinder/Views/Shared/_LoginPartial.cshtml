@using Microsoft.AspNetCore.Identity
@using PathFinder.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (User?.Identity?.IsAuthenticated ?? false)
{
    var applicationUser = await UserManager.GetUserAsync(User);
    string fullName = $"{applicationUser.FirstName} {applicationUser.LastName}";

    <li class="nav-item">
            <a id="navbar-main-text" class="nav-link btn btn-link" asp-area="Identity" asp-page="/Account/Profile">Здравейте, @fullName!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link" id="navbar-main-text">Излезте</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link btn btn-link" id="navbar-main-text" asp-area="Identity" asp-page="/Account/Register">Регистрирайте се</a>
    </li>
    <li class="nav-item">
            <a class="nav-link btn btn-link" id="navbar-main-text" asp-area="Identity" asp-page="/Account/Login">Влезте</a>
    </li>
}
</ul>
