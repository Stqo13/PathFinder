@using PathFinder.ViewModels.RoleRequestViewModel;
@model RoleRequestSendViewModel

@{
    ViewData["Title"] = "Send Company Role Request";
}

<h2 class="text-center">Send Company Role Request</h2>

<div class="form-container">
    <form asp-action="SendCompanyRoleRequest" method="post" class="role-request-form">
        <div class="form-group">
            <label asp-for="Sender">Sender</label>
            <input asp-for="Sender" class="form-control" placeholder="Enter your Email" />
            <span asp-validation-for="Sender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">Send Request</button>
    </form>
</div>
