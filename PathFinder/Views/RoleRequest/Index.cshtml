@{
    ViewData["Title"] = "Choose Your Role Request";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>
<div class="dashboard-container">
    <a asp-controller="RoleRequest" asp-action="SendCompanyRoleRequest" asp-area="" class="dashboard-item" role="button">
        <i class="fas fa-building dashboard-icon"></i>
        <h5>Send Company Role Request</h5>
    </a>
    <a asp-controller="RoleRequest" asp-action="SendInstitutionRoleRequest" asp-area="" class="dashboard-item" role="button">
        <i class="fas fa-university dashboard-icon"></i>
        <h5>Send Institution Role Request</h5>
    </a>
</div>
